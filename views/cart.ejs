<%- include('./partials/header') %>
    <% items.cart.forEach(function(item){ %>
        <div class="w-full font-sans h-screen bg-gray-500 flex items-center justify-center gap-2">
            <div class="w-[60%] bg-white rounded-md flex items-center gap-10">
            <div class="w-96 bg-white  rounded-md overflow-hidden">
                <div class="w-full h-80 bg-yellow-500">
                    <img class="h-full w-full" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="">
                </div>
                <div class="w-full bg-yellow-200 flex  justify-between px-5 py-4">
                    <h3 class="text-2xl "><%= item.name %></h3>
                    <div class="flex  items-center gap-2">
                        <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                        <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                        <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                    </div>
                </div>
                <div class="flex items-center bg-yellow-200 justify-between px-5 py-3">
                    <h4 class="text-l  font-semibold ">Net Total</h4>
                    <h2 class="text-lg">₹ <%=item.price%></h2>
                </div>
            </div>
            <div class="w-[70%]">
                <h3 class="text-xl font-semibold">Price Breakdown</h3>
                <div class="px-10 mt-5">
                    <div class="flex mt-2">
                        <h4 class="w-1/3 font-semibold">Total MRP</h4>
                        <h4>₹ <%=item.price%></h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3 font-semibold">Discount on MRP</h4>
                        <h4>₹ <%=item.discount%></h4>
                    </div>
                    <div class="flex mt-2 font-semibold">
                        <h4 class="w-1/3">Shipping Fee</h4>
                        <h4>FREE</h4>
                    </div>
                </div>
                <div class="w-full h-[1px] bg-black mt-10"></div>
                <div class="flex mt-5">
                    <h3 class="w-1/3 text-xl font-semibold">Total Price</h3>
                    <% let discount_amount= item.price*item.discount/100 %>
                    <% let totalAmount= item.price-discount_amount %>
                    <h3 class="font-semibold text-xl text-green-600">₹ <%=totalAmount%></h3>
                </div>
                <form action=""></form>
            </div>
        </div>
        </div>
      
    <% }); %>
    <%- include('./partials/footer') %>